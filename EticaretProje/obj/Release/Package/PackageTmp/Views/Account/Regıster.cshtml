@model EticaretProje.Models.Account.RegisterModel
@{
    ViewBag.Title = "Regıster";
}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                <div class="panel panel-default">
                    <div class="panel-heading text-center">

                        <h2>Register</h2>
                        @if (ViewBag.reError != null && string.IsNullOrEmpty((string)ViewBag.reError )== false)
                        {
                            <small style="color:darkred">@ViewBag.reError</small>
                        }
                        else
                        {
                                <small>plasea enter your e-mail and password</small>
                        }


                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            <center>
                                <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                            </center>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control", placeholder = "name", type = "name" ,required="required"})
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Surname, new { @class = "form-control", placeholder = "surname", type = "surname", required = "required" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "e-mail address", type = "e-mail", required = "required" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password", required = "required" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.rePassword, new { @class = "form-control", placeholder = "re-password", type = "password", required = "required" })

                        </div>

                    </div>
                    <div class="panel-footer text-right">
                        <a href="@Url.Action("Login","Account")" class="btn btn-info">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </a>
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-floppy-saved"></span> Register
                        </button>

                    </div>
                </div>


            }




        </div>
    </div>

