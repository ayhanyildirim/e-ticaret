@model EticaretProje.Models.Account.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                     <h2>Giriş</h2>
                    <small style="color:red;">@TempData["Info"]</small> <br />
                    @if (ViewBag.reError != null && string.IsNullOrEmpty((string)ViewBag.reError) == false)
                    {
                        <small style="color:red">@ViewBag.reError</small>
                    }
                    else
                    {
                           <small>Lütfen e-posta ve şifrenizi giriniz.</small>
                    }

                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>

                    <div class="form-group">

                        @Html.TextBoxFor(m => Model.Member.Email, new { @class = "form-control", placeholder = "e-mail", type = "email" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => Model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password" })
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a href="ForgotPassword" class="btn btn-warning">
                        <span class="glyphicon glyphicon-asterisk"></span> Şifremi Unuttum
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Giriş
                    </button>

                </div>
            </div>
        }


    </div>
</div>

